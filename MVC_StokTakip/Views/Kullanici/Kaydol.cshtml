@model MVC_StokTakip.Models.Entity.Kullanici1

@{
    ViewBag.Title = "Kaydol";
}

<h2>Kaydol</h2>
<div class="container">
    @using (Html.BeginForm("Kaydol", "Kullanici", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.KullaniciAdi)
            @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.İsim)
            @Html.TextBoxFor(x => x.İsim, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Soyisim)
            @Html.TextBoxFor(x => x.Soyisim, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Sifre)
            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-success">Kaydol</button>
        </div>
    }
</div>
