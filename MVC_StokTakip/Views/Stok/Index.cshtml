@model List<MVC_StokTakip.Models.Entity.Stok1>

@{
    ViewBag.Title = "Index";
}

<h2>Stoklar</h2>

<table class="table">
    <thead style="background-color:aliceblue">
        <tr>
            <th>ID</th>
            <th>Stok Adı</th>
            <th>Stok Miktarı</th>
            <th>Stok Birimi</th>
            <th>KDV</th>
            <th>Fiyat</th>
            <th>Açıklama</th>
            <th>Resim</th>
            <th>Depo</th>
            <th>Kayıt Tarihi</th>
            <th>Kullanıcı</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@Html.DisplayFor(x=>item.ID)</th>
                <td>@Html.DisplayFor(x=>item.StokAdi)</td>
                <td>@Html.DisplayFor(x=>item.StokMiktar)</td>
                <td>@Html.DisplayFor(x=>item.StokBirim)</td>
                <td>% @Html.DisplayFor(x=>item.KDV)</td>
                <td>@Html.DisplayFor(x=>item.Fiyat)</td>
                <td>@Html.TextAreaFor(x=>item.Aciklama)</td>
                <td>@Html.DisplayFor(x=>item.Resim)</td>
                @*<td><img src="~/image/@item.Resim" /></td>*@
                <td>@Html.DisplayFor(x=>item.Depo1.DepoAdi)</td>
                <td>@Html.DisplayFor(x=>item.KayitTarih)</td>
                <td>@Html.DisplayFor(x=>item.Kullanici1.KullaniciAdi)</td>
                <td>@Html.ActionLink("Sil","Sil",new {id=item.ID}, new {@class="btn btn-danger"})</td>
                <td>@Html.ActionLink("Güncelle","Guncelle",new {id=item.ID}, new {@class="btn btn-primary"})</td>
                <td>@Html.ActionLink("Depo Giriş","MiktarEkle",new {id=item.ID}, new {@class="btn btn-secondary"})</td>
                <td>@Html.ActionLink("Depo Çıkış","MiktarCikar",new {id=item.ID}, new {@class="btn btn-secondary"})</td>
            </tr>
        }
    </tbody>
</table>
<a href="/Stok/Ekle/" class="btn btn-success">Stok Ekle</a>
